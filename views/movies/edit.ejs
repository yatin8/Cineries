<% include ../partials/header %>
<div class="row">
    <h1 style="text-align: center">Edit <%= movie.name %></h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/movies/<%=movie._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="name" value="<%= movie.name %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="image" value="<%= movie.image %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="description" 
                       value="<%=movie.description%>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Update!</button>
            </div>
        </form>
        <a href="/movies">Go Back</a>
    </div>
</div>
<% include ../partials/footer %>